@model Vidly.Models.Movie

@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<table style="width: 100%">
    <thead>
    <tr>
        <th>
            MovieName
        </th>
        <th>
            ReleasedTime
        </th>
        <th>
            AddedDate
        </th>
        <th>
            Type
        </th>
    </tr>

    </thead>
    <tbody>
    <tr>
        <td>
            @Model.Name
        </td>
        <td>
           @Model.ReleasedTime.ToString().Substring(0,10)
        </td>
        <td>
            @Model.AddedDate.ToString().Substring(0, 10)
        </td>
        <td>
            @Model.Genre.Name
        </td>

    </tr>
    </tbody>
    
    

</table>
